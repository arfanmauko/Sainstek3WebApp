@model IEnumerable<SainsTekWepApp.Areas.Admin.Models.MessageToUserViewModel>


@if (Model.Count() == 0)
{
    <div class=" alert alert-danger text-center">
        @ViewBag.EmptyMessage
    </div>
}
else
{
    <table class="table table-hover">
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row"><input type="checkbox" value="@item.IsSelected" /></td>
                    <td>@item.MessageTitle</td>
                    <td>@item.MessageContent</td>
                    <td>@item.DateCreated</td>
                </tr>
            }
        </tbody>
    </table>
}